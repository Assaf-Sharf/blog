file = {:Users/rivers/Library/Application Support/Mendeley Desktop/Downloaded/Coatsworth et al. - 2022 - Intrinsic variation in the vertically transmitted core virome of the mosquito Aedes aegypti.pdf:pdf},
issn = {1365-294X},
journal = {Molecular Ecology},
keywords = {aedes aegypti,insect,specific virus,vertical transmisison,virome},
month = {mar},
pages = {1--17},
