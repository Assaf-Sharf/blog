issn = {15746941},
journal = {FEMS microbiology ecology},
keywords = {Ericaceae,ericoid mycorrhiza,peat,sedge,soil depth,water table},
month = {jul},
number = {7},
title = {{Patterns and drivers of fungal community depth stratification in Sphagnum peat}},
